    xmlns:local="clr-namespace:GorselOdev2"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Ana Sayfa "
        Icon="home.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
      Title="Kredi Hesaplama"
        Icon="calculator.png"
      ContentTemplate="{DataTemplate local:KrediHesaplama}"
      Route="KrediHesaplama" />
    <ShellContent
      Title="Vücut Kitle İndexi"
        Icon="scale.png"
      ContentTemplate="{DataTemplate local:VücutKitleİndeksi}"
      Route="VücutKitleİndeksi" />
